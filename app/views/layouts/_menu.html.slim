nav.navbar.navbar-transparent.navbar-static-top role="navigation"
  div.container
    div.navbar-header
      button[type="button"
             class="navbar-toggle"
             data-toggle="collapse"
             data-target="#navbar-collapse"]
        span.sr-only
        span.icon-bar
        span.icon-bar
        span.icon-bar

      = link_to image_tag('dfc-logo-sml.png', class: 'img-responsive logo'), root_path, class: 'navbar-brand'
    / Temporarily disable nav. N.B.
    div#navbar-collapse.collapse.navbar-collapse.pull-right
      ul.nav.navbar-nav
        - static_pages.each do |page|
          - unless page.hide_main_nav?
            li = link_to page.title, page.slug, class: nav_class_for(page)
